@page
@model Visio_Beta.Areas.Admin.Pages.AddModel
@{
    ViewData["Title"] = "Add";
}

<div class="card shadow-lg container col-8 pt-5 align-items-md-center">

    <h1 class="text-warning p-4">New <b class="text-info">Book</b></h1>

    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Book.Title"></label>
            </div>
            <div class="col-9">
                <input type="text" asp-for="Book.Title" class="form-control" placeholder="livre de la jungle...etc" />
                <span asp-validation-for="Book.Title"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-9">
                <input type="text" asp-for="Book.Author" class="form-control" placeholder="Frank Dunno" />
                <span asp-validation-for="Book.Author"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Book.Year"></label>
            </div>
            <div class="col-9">
                <input type="text" asp-for="Book.Year" class="form-control" placeholder=" 2015" />
                <span asp-validation-for="Book.Year"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Book.Edition"></label>
            </div>
            <div class="col-9">
                <input type="text" asp-for="Book.Edition" class="form-control" placeholder=" Ki-oon" />
                <span asp-validation-for="Book.Edition"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Book.Pages"></label>
            </div>
            <div class="col-9">
                <input type="text" asp-for="Book.Pages" class="form-control" placeholder=" Ki-oon" />
                <span asp-validation-for="Book.Pages"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Book.Add_date">Date d'ajout</label>
            </div>
            <div class="col-9">
                <input type="datetime-local" asp-for="Book.Add_date" class="form-control date" />
                <span asp-validation-for="Book.Add_date"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1">
                <label class="text-info">Fichier</label>
            </div>
            <div class="col-4">
                <input type="file" asp-for="FileModel.form" class="form-control form-control-file" />
                <span asp-validation-for="FileModel.form"></span>
            </div>
        </div>

        <div class="form-group row offset-2">
            <div class="col-4 ">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-8">
                <a asp-page="Books" asp-area="Admin" class="btn btn-secondary">Back To Index</a>
            </div>
        </div>
        <em class="text-muted text-info p-2">Veuillez remplir tout les <b class="text-warning">champs </b> , car ils sont  <b class="text-warning">requis.</b> </em>
    </form>
</div>

@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
