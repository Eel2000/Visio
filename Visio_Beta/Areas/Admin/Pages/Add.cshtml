@page
@model Visio_Beta.Areas.Admin.Pages.AddModel
@{
    ViewData["Title"] = "Add";
}

    <div class="card shadow-lg container col-8 pt-5 align-items-md-center">

        <h1 class="text-warning p-4">New <b class="text-info">Book</b></h1>

        <form method="post">
            <div class="row form-group">
                <div class="col-2">
                    <label>Titre</label>
                </div>
                <div class="col-9">
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-2">
                    <label>Auteur</label>
                </div>
                <div class="col-9">
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-2">
                    <label>Annee</label>
                </div>
                <div class="col-9">
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-2">
                    <label>Date d'ajout</label>
                </div>
                <div class="col-9">
                    <input type="datetime-local" class="form-control date" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-3">
                    <label>Fichier</label>
                </div>
                <div class="col-9">
                    <input type="file" class="form-check-input" />
                </div>
            </div>

            <div class="form-group row offset-2">
                <div class="col-4 ">
                    <input type="submit" value="Create" class="btn btn-primary form-control" />
                </div>
                <div class="col-8">
                    <a asp-page="Index" asp-area="Admin" class="btn btn-secondary">Back To Index</a>
                </div>
            </div>
        </form>
    </div>